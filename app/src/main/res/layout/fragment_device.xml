<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fragmentdevicemainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/fragmentdevicelinearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/fragmentdevicelogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/sentinel"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/fragmentdeviceinstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/antic"
            android:text="@string/fragmentdeviceinstructions"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/fragmentdevicespinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/antic"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner"
            android:drawSelectorOnTop="true" />

        <TextView
            android:id="@+id/fragmentdeviceinstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/antic"
            android:text="@string/please_select_app_to_limit_access"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/choice_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:alignmentMode="alignBounds"
            android:columnCount="3"
            android:rowCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/blockmessenger"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@color/BlackGray"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:src="@drawable/messenger"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/blockfacebook"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@color/BlackGray"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:src="@drawable/facebook"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/blockinstagram"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@color/BlackGray"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:src="@drawable/instagram"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/blockyoutube"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:background="@color/BlackGray"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:src="@drawable/youtube"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/blocktwitter"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:background="@color/BlackGray"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:src="@drawable/twitter"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/blocktiktok"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:background="@color/BlackGray"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:src="@drawable/tiktok"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/blockdevice"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:background="@color/BlackGray"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:src="@drawable/ic_baseline_lock_24"
                tools:ignore="ContentDescription" />

        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>